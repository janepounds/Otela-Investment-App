platform :ios, '14.0'

# Explicitly set Flutter root
flutter_root = ENV['FLUTTER_ROOT'] || '/home/janepounds/flutter/flutter'

# Load the Flutter-specific configurations for iOS
eval(File.read(File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')), binding)

target 'Runner' do
  use_frameworks! :linkage => :static
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

target 'RunnerTests' do
  inherit! :search_paths
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # Exclude arm64 for the iOS simulator (keeps your existing setting)
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      
      # Force all dependencies to use iOS 14.0 (fixes your build issue)
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
    end
  end
end


