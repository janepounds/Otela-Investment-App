platform :ios, '12.0'

# Explicitly set Flutter root
flutter_root = ENV['FLUTTER_ROOT'] || '/home/janepounds/flutter/flutter'

# Load the Flutter-specific configurations for iOS
eval(File.read(File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')), binding)

target 'Runner' do
  use_frameworks!
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

target 'RunnerTests' do
  inherit! :search_paths
end
